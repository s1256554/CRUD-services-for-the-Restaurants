<html>
<head>
	<title>Restaurant</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
	
<style>
.jumbotron {
  padding : 1em 0em 1em 1em;
  margin : 0em 0em 0.5em 0em;
  background : #2286BB;
  color : white;
}

.container-fluid{
  padding : 0;
}

.container{
  padding : 1em; 
}

.loginPanel{
  margin : 1.5em 0em 0em 1.5em;
}

.form-group{
  margin-bottom: 1em;
}

#errMsg{
  color : #FE4848;
}

</style>

</head>
<body>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
	<div class="container-fluid">
		<div class="jumbotron">
			<h3><b>Login</b></h3>
		</div>
	</div>
	<div class="container-fluid loginPanel">
	<form action="/loginac" method="POST">
		<div class="form-group col-md-6">
			<label for="uname">User Name :</label> 
			<input name="uname" class="form-control" id="uname" type="text">
		</div>
		<div class="form-group col-md-6">
			<label for="pw">Password : </label>
			<input name="pw" class="form-control" id="pw" type="password"/>
		</div>
		<div class="form-group">
		<button class="btn btn-primary" value="login" type="submit">LOGIN</button>
		<a href = "/register" class="btn" role="button">REGISTER</a>
		</div>
		<div id="errMsg"><b><%= message %></b></div>
	</form>
        
	</div>
</body>
</html>
